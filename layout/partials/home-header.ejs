            <a href="<%- theme.userinfo.github  %>">
                <img src="../images/icons/github.svg" />
            </a>

            <a href="<%- theme.userinfo.email  %>">
                <img src="../images/icons/mail.svg" />
            </a>

        </div>
    </a>
</div>