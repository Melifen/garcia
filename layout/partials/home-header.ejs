            <img id="header-img" src="<%-theme.userinfo.avator%>" />
        </div>
        <div id="header-userinfo" class="header-userinfo">
            <span><%-theme.userinfo.name %></span>
            <p><%-theme.userinfo.description %></p>
        </div>

